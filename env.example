# QuickLocal E-commerce Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== APPLICATION CORE ====================
NODE_ENV=development
APP_NAME=QuickLocal
APP_VERSION=2.1.0
PORT=10000
HOST=0.0.0.0
API_VERSION=v1
API_BASE_PATH=/api/v1

# ==================== DATABASE CONFIGURATION ====================
MONGODB_URI=mongodb://localhost:27017/quicklocal
MONGO_URI=mongodb://localhost:27017/quicklocal
DB_NAME=quicklocal
DB_POOL_SIZE=20
DB_CONNECT_TIMEOUT_MS=30000

# ==================== SECURITY & AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES=24h
JWT_REFRESH_EXPIRES=7d
COOKIE_SECRET=your-cookie-secret-key-change-this
SESSION_SECRET=your-session-secret-key-change-this
BCRYPT_SALT_ROUNDS=12

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_MAX=20
ORDER_RATE_LIMIT_MAX=10
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=15

# ==================== PERFORMANCE & SCALING ====================
ENABLE_CLUSTER_MODE=false
CLUSTER_WORKERS=auto
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# ==================== FEATURES & SERVICES ====================
ENABLE_SOCKET_IO=true
ENABLE_ERROR_TRACKING=true
ENABLE_RESPONSE_CACHING=true
CACHE_TTL=3600
FEATURE_LIVE_TRACKING=true
FEATURE_CHAT=true
FEATURE_REVIEWS=true
FEATURE_LOYALTY_PROGRAM=true

# ==================== SECURITY HEADERS ====================
ENABLE_HELMET=true
HELMET_CSP_ENABLED=true
HSTS_MAX_AGE=63072000
HSTS_INCLUDE_SUBDOMAINS=true

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_DIR=./logs
ENABLE_REQUEST_LOGGING=true

# ==================== FILE UPLOAD ====================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ==================== EXTERNAL SERVICES ====================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
DISABLE_REDIS=false

# ==================== PAYMENT GATEWAYS ====================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ==================== EMAIL SERVICE ====================
# Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=QuickLocal <noreply@quicklocal.com>

# SendGrid (Alternative)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@quicklocal.com

# ==================== SMS SERVICE ====================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS (Alternative)
AWS_SNS_REGION=us-east-1
AWS_SNS_ACCESS_KEY_ID=your_aws_access_key
AWS_SNS_SECRET_ACCESS_KEY=your_aws_secret_key

# ==================== CLOUD STORAGE ====================
# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 (Alternative)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your_aws_access_key
AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key

# ==================== DELIVERY & LOGISTICS ====================
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Delivery Configuration
BASE_DELIVERY_FEE=25
FREE_DELIVERY_THRESHOLD=500
MIN_ORDER_AMOUNT=50
MAX_DELIVERY_DISTANCE=20
DELIVERY_TIME_SLOTS=30

# ==================== ANALYTICS & MONITORING ====================
# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_url
SENTRY_ENVIRONMENT=development

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id

# ==================== DEVELOPMENT ====================
DEBUG_MODE=true
MOCK_PAYMENT=true
ENABLE_API_DOCS=true

# ==================== CORS & FRONTEND ====================
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
API_URL=http://localhost:10000
FRONTEND_URLS=http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================== MARKETPLACE CONFIGURATION ====================
CURRENCY=INR
DEFAULT_LANGUAGE=en
TIMEZONE=Asia/Kolkata
SUPPORT_EMAIL=support@quicklocal.com
SUPPORT_PHONE=+91-9876543210

# ==================== FEATURE FLAGS ====================
ENABLE_REVIEWS=true
ENABLE_WISHLIST=true
ENABLE_COMPARISON=true
ENABLE_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true

# ==================== ADVANCED CONFIGURATION ====================
# Process Management
PROCESS_TITLE=QuickLocal-Server
ENABLE_SOURCE_MAPS=true

# Database Advanced
DB_MAX_RETRY_ATTEMPTS=5
DB_RETRY_DELAY_MS=5000

# Cluster Configuration
CLUSTER_MAX_RESTARTS=5
CLUSTER_RESTART_WINDOW=60000

# Session Configuration
SESSION_COOKIE_NAME=quicklocal_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_MAX_AGE=604800000
SESSION_COOKIE_SAME_SITE=strict

# Trust Proxy (for production behind load balancer)
TRUST_PROXY=1


