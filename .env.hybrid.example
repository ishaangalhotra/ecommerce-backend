# Hybrid Architecture Environment Variables
# Copy this to .env and fill in your actual values

# Node.js Environment
NODE_ENV=production
PORT=3000

# Legacy JWT Configuration (for existing users)
JWT_SECRET=your_existing_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRES=7d

# MongoDB Configuration (for business data)
MONGO_URI=mongodb+srv://your-mongo-atlas-cluster/quicklocal?retryWrites=true&w=majority

# Redis Configuration (can be kept for sessions/cache)
REDIS_URL=redis://localhost:6379

# Supabase Configuration (for auth and real-time)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# ImageKit Configuration (keeping existing image service)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_endpoint

# Email Configuration (can migrate to Supabase later)
EMAIL_FROM=noreply@yourapp.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Payment Gateways
STRIPE_SECRET_KEY=your_stripe_secret_key
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# External Services
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_number

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Client URLs
CLIENT_URL=https://your-frontend-on-vercel.app
ADMIN_URL=https://your-admin-panel.app

# Memory Optimization Settings
MAX_OLD_SPACE_SIZE=512
MEMORY_MONITORING_ENABLED=true
SUPABASE_REALTIME_ENABLED=true
SOCKET_IO_DISABLED=true

# Analytics and Logging
LOG_TO_SUPABASE=true
LOG_LEVEL=info
ANALYTICS_TO_SUPABASE=true
