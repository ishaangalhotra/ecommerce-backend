{
  "name": "quicklocal-backend",
  "version": "2.0.0",
  "description": "High-performance backend API for QuickLocal Marketplace - Ultra-fast 20-minute local delivery platform with real-time tracking",
  "main": "server.js",
  "author": "QuickLocal Engineering Team <engineering@quicklocal.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "quicklocal",
    "hyperlocal",
    "instant-delivery",
    "marketplace",
    "express",
    "mongodb",
    "redis",
    "real-time",
    "microservices",
    "serverless-ready"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node --max-old-space-size=512 --expose-gc server.js",
    "start:safe": "node --max-old-space-size=256 --expose-gc server.js",
    "start:render": "node --max-old-space-size=256 --expose-gc server.js",
    "dev": "cross-env NODE_ENV=development nodemon --inspect server.js",
    "debug": "cross-env NODE_ENV=development node --inspect-brk server.js",
    "prod": "NODE_ENV=production PM2_HOME=.pm2 pm2-runtime start ecosystem.config.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit --runInBand",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:ci": "CI=true npm test",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write . && npm run lint:fix",
    "validate": "npm run lint && npm run test",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:access": "tail -f logs/access.log",
    "db:migrate": "node --enable-source-maps scripts/run-migrations.js",
    "db:rollback": "node --enable-source-maps migrations/rollback.js",
    "db:seed": "NODE_ENV=development node --enable-source-maps scripts/seed.js",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "docker:build": "docker build -t quicklocal-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env quicklocal-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "security:audit": "npm audit --audit-level high || true",
    "security:check": "npx audit-ci --config audit-ci.json",
    "security:fix": "npm audit fix",
    "security:snyk": "npx snyk test",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js -o public/swagger.json ./routes/*.js",
    "docs:serve": "swagger-ui-serve public/swagger.json",
    "docs:deploy": "npm run docs:generate && cp public/swagger.json ../docs/api/",
    "metrics": "curl http://localhost:3000/metrics",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "status": "curl -s http://localhost:3000/health | jq",
    "setup": "npm install && npm run db:migrate && npm run db:seed",
    "setup:dev": "npm install && npm run db:reset && npm run docs:generate",
    "setup:prod": "npm ci --only=production && npm run db:migrate",
    "build": "npm run validate && npm run docs:generate",
    "deploy": "npm run build && npm run setup:prod",
    "clean": "rm -rf node_modules coverage dist logs/*.log",
    "clean:logs": "rm -rf logs/*.log",
    "clean:cache": "npm cache clean --force",
    "precommit": "lint-staged",
    "prepush": "npm run validate",
    "hybrid:integrate": "node integrate-supabase.js",
    "hybrid:memory-test": "node scripts/hybrid-memory-monitor.js test",
    "hybrid:memory-monitor": "node scripts/hybrid-memory-monitor.js",
    "hybrid:setup-test": "node -e \"require('./config/supabase'); console.log('âœ… Supabase config loaded successfully')\""
  },
  "dependencies": {
    "@sentry/node": "^7.77.0",
    "@sentry/tracing": "^7.77.0",
    "@supabase/supabase-js": "^2.57.4",
    "agenda": "^5.0.0",
    "async-retry": "^1.3.3",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.56.8",
    "cloudinary": "^1.41.0",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-async-handler": "^1.2.0",
    "express-brute": "^1.0.1",
    "express-brute-mongoose": "^1.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "geoip-lite": "^1.4.10",
    "google-auth-library": "^10.3.0",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "http": "^0.0.1-security",
    "imagekit": "^6.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.16.5",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.17.1",
    "pidusage": "^4.0.1",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.1",
    "razorpay": "^2.9.6",
    "redis": "^4.7.1",
    "response-time": "^2.3.2",
    "sharp": "^0.34.3",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^18.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.9.0",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!server.js",
      "!ecosystem.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testTimeout": 30000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "security",
      "jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "security/detect-object-injection": "warn",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/*.spec.js"
          ]
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "logs/",
      "tests/",
      "public/",
      "uploads/"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    },
    "delay": "1000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quicklocal/quicklocal-backend.git"
  },
  "bugs": {
    "url": "https://github.com/quicklocal/quicklocal-backend/issues"
  },
  "homepage": "https://quicklocal.com",
  "volta": {
    "node": "24.4.1",
    "npm": "10.8.2"
  }
}
