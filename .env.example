# ==== CORE CONFIGURATION ====
NODE_ENV=production
PORT=10000
APP_NAME=QuickLocal
APP_VERSION=2.0.0
API_BASE_PATH=/api/v1
TIMEZONE=Asia/Kolkata
CURRENCY=INR

# ==== DOMAINS ====
API_URL=your-backend-url
CLIENT_URL=your-frontend-url
ADMIN_URL=your-admin-url
CDN_URL=your-cdn-url

# Frontend URLs (comma-separated)
FRONTEND_URLS=your-frontend-urls
ALLOWED_ORIGINS=your-allowed-origins
CORS_ORIGINS=your-cors-origins
TRUST_PROXY=1
COOKIE_DOMAIN=your-domain

# ==== DATABASE ====
MONGODB_URI=your-mongodb-connection-string
MONGO_URI=your-mongodb-connection-string
MONGO_DB_NAME=your-database-name

# ==== AUTHENTICATION & SECURITY ====
JWT_SECRET=your-jwt-secret-minimum-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
COOKIE_SECRET=your-cookie-secret
SESSION_SECRET=your-session-secret
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# ==== EMAIL CONFIGURATION ====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Your App Name

# ==== FILE UPLOAD (ImageKit) ====
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=your-imagekit-endpoint
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/jpg

# ==== PAYMENT GATEWAYS ====
# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ==== DELIVERY SETTINGS ====
DELIVERY_ENABLED=true
FEATURE_LIVE_TRACKING=true
WEBSOCKETS_ENABLED=true
BASE_DELIVERY_FEE=25
FREE_DELIVERY_THRESHOLD=500

# ==== PERFORMANCE OPTIMIZATION ====
NODE_OPTIONS=--max-old-space-size=512 --expose-gc
UV_THREADPOOL_SIZE=4
MAX_REQUEST_SIZE=10mb
CONNECTION_POOL_SIZE=5
